---
import type { Locale } from "@/i18n/utils";
import { t } from "@/i18n/utils";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const links = [
  { href: `/${locale}/privacy/`, label: t("footer.privacy", locale) },
  { href: `/${locale}/terms/`, label: t("footer.terms", locale) },
  { href: `/${locale}/contact/`, label: t("footer.contact", locale) },
];
---

<footer class="border-t border-border bg-background">
  <div class="mx-auto flex max-w-6xl flex-col items-center gap-4 px-4 py-8 sm:flex-row sm:justify-between sm:px-6 lg:px-8">
    <p class="text-body-xs text-muted-foreground">
      {t("footer.copyright", locale)}
    </p>
    <nav aria-label="Footer" class="flex items-center gap-4">
      {links.map((link) => (
        <a
          href={link.href}
          class="text-body-xs text-muted-foreground no-underline transition-colors hover:text-foreground"
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</footer>
