---
interface Props {
  class?: string;
  muted?: boolean;
  id?: string;
}

const { class: className = "", muted = false, id } = Astro.props;

const bgClass = muted ? "bg-muted" : "bg-background";
---

<section id={id} class={`py-16 md:py-24 ${bgClass} ${className}`}>
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8">
    <slot />
  </div>
</section>
