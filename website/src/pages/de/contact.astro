---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/layout/Section.astro";
import Card from "@/components/ui/Card.astro";
import { t } from "@/i18n/utils";

const locale = "de";
---

<BaseLayout
  title={`${t("footer.contact", locale)} — ${t("site.title", locale)}`}
  description={t("site.description", locale)}
  locale={locale}
  path="/contact/"
>
  <Section class="py-24 md:py-32">
    <div class="container">
      <h1 class="text-display-lg font-bold tracking-tight mb-6">
        {t("footer.contact", locale)}
      </h1>
      <p class="text-body-lg text-muted-foreground max-w-3xl mb-12">
        Kontaktieren Sie das Auryth-Team.
      </p>
    </div>
  </Section>

  <Section muted class="py-24 md:py-32">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-display-md font-bold mb-8">Unternehmensinformationen</h2>

        <div class="grid gap-6 md:grid-cols-2">
          <Card>
            <h3 class="text-body-lg font-semibold mb-3">E-Mail</h3>
            <a
              href="mailto:info@auryth.ai"
              class="text-body-md text-primary hover:underline"
            >
              info@auryth.ai
            </a>
          </Card>

          <Card>
            <h3 class="text-body-lg font-semibold mb-3">Unternehmen</h3>
            <p class="text-body-md text-muted-foreground">Auryth BV</p>
          </Card>

          <Card>
            <h3 class="text-body-lg font-semibold mb-3">Adresse</h3>
            <p class="text-body-md text-muted-foreground">Belgien</p>
          </Card>

          <Card>
            <h3 class="text-body-lg font-semibold mb-3">Registrierung</h3>
            <p class="text-body-md text-muted-foreground">
              KBO/BCE: 0XXX.XXX.XXX
            </p>
          </Card>
        </div>
      </div>
    </div>
  </Section>

  <Section class="py-24 md:py-32">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-display-md font-bold mb-6">
          Treten Sie der Warteliste bei
        </h2>
        <p class="text-body-lg text-muted-foreground mb-8">
          Interessiert an frühem Zugang? Treten Sie unserer Warteliste bei, um
          benachrichtigt zu werden, wenn wir starten.
        </p>
        <a
          href={`/${locale}/waitlist`}
          class="inline-flex h-11 min-h-[44px] items-center justify-center rounded-lg bg-primary px-6 text-body-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
        >
          Zur Warteliste
        </a>
      </div>
    </div>
  </Section>
</BaseLayout>
