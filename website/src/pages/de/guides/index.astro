---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/layout/Section.astro";
import Card from "@/components/ui/Card.astro";
import { getCollection } from "astro:content";
import { t } from "@/i18n/utils";

const locale = "de";

const guides = (await getCollection("guides", ({ data }) => data.locale === locale))
  .sort((a, b) => b.data.lastUpdated.valueOf() - a.data.lastUpdated.valueOf());
---

<BaseLayout
  title={`Leitfäden — ${t("site.title", locale)}`}
  description="Ausführliche Leitfäden zum belgischen Steuerrecht — TOB, Erbschaftsteuer, Körperschaftsteuer und mehr."
  locale={locale}
  path="/guides/"
>
  <main id="main-content">
    <Section class="py-24 md:py-32">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-display text-foreground">Steuerleitfäden</h1>
        <p class="mt-4 text-body-lg text-muted-foreground">Umfassende Referenzleitfäden zu belgischen Steuerthemen</p>
      </div>
    </Section>

    <Section>
      {guides.length > 0 ? (
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {guides.map((guide) => (
            <Card>
              <a href={`/${locale}/guides/${guide.id.replace(/\.mdx?$|\.md$/, "")}/`} class="block group">
                <span class="text-caption text-primary-text">{guide.data.topic}</span>
                <h2 class="mt-2 text-body-lg font-semibold text-foreground group-hover:text-primary-text transition-colors">
                  {guide.data.title}
                </h2>
                <p class="mt-2 text-body-sm text-muted-foreground">{guide.data.description}</p>
                <p class="mt-3 text-caption text-muted-foreground">
                  Aktualisiert am {guide.data.lastUpdated.toLocaleDateString("de-DE", { year: "numeric", month: "long", day: "numeric" })}
                </p>
              </a>
            </Card>
          ))}
        </div>
      ) : (
        <p class="text-center text-body text-muted-foreground">Leitfäden kommen bald. Schauen Sie nach dem Launch wieder vorbei!</p>
      )}
    </Section>
  </main>
</BaseLayout>
