---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/layout/Section.astro";
import Card from "@/components/ui/Card.astro";
import { t } from "@/i18n/utils";

const locale = "en";
---

<BaseLayout
  title={`${t("nav.about", locale)} — ${t("site.title", locale)}`}
  description={t("site.description", locale)}
  locale={locale}
  path="/about/"
>
  <main id="main-content">
    <Section class="py-24 md:py-32">
    <div class="container">
      <h1 class="text-display font-bold tracking-tight mb-6">
        {t("nav.about", locale)}
      </h1>
      <p class="text-body-lg text-muted-foreground max-w-3xl mb-12">
        Building AI-powered tax research for Belgium's professionals.
      </p>
    </div>
  </Section>

  <Section muted class="py-24 md:py-32">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-h2 font-bold mb-6">Our Story</h2>
        <div class="space-y-4 text-body text-muted-foreground">
          <p>
            Auryth BV is a Belgian company dedicated to making tax law accessible
            through artificial intelligence. We started with a simple observation:
            tax professionals spend countless hours searching through fragmented
            documentation, legal texts, and ruling databases.
          </p>
          <p>
            Our platform brings together Belgium's tax landscape—federal and
            regional legislation, administrative circulars, advance rulings, and
            case law—into a single, intelligent research assistant.
          </p>
          <p>
            We're building for accountants, tax advisors, and legal professionals
            who need reliable answers backed by verifiable sources. Every response
            includes precise citations, enabling you to trust the information and
            verify it yourself.
          </p>
        </div>
      </div>
    </div>
  </Section>

  <Section class="py-24 md:py-32">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-h2 font-bold mb-6">Our Mission</h2>
        <p class="text-body-lg text-muted-foreground mb-8">
          Making Belgian tax law accessible and transparent through AI that
          professionals can trust.
        </p>
        <Card>
          <h3 class="text-body-lg font-semibold mb-3">Our Approach</h3>
          <ul class="space-y-2 text-body text-muted-foreground">
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>Accuracy first: every answer cites official sources</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>Built for professionals: authoritative yet accessible</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>Belgian-focused: deep coverage of federal and regional tax law</span>
            </li>
            <li class="flex items-start">
              <span class="mr-2">•</span>
              <span>Transparent: you can always verify our sources</span>
            </li>
          </ul>
        </Card>
      </div>
    </div>
  </Section>

  <Section muted class="py-24 md:py-32">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-h2 font-bold mb-6">
          Join the Waitlist
        </h2>
        <p class="text-body-lg text-muted-foreground mb-8">
          Be among the first to experience AI-powered Belgian tax research built
          for professionals.
        </p>
        <a
          href={`/${locale}/waitlist`}
          class="inline-flex h-11 min-h-[44px] items-center justify-center rounded-lg bg-primary px-6 text-body-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
        >
          Join Waitlist
        </a>
      </div>
    </div>
  </Section>
  </main>
</BaseLayout>
