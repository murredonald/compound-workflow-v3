---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/layout/Section.astro";
import Card from "@/components/ui/Card.astro";
import { getCollection } from "astro:content";
import { t } from "@/i18n/utils";

const locale = "fr";

const guides = (await getCollection("guides", ({ data }) => data.locale === locale))
  .sort((a, b) => b.data.lastUpdated.valueOf() - a.data.lastUpdated.valueOf());

const grouped = new Map<string, typeof guides>();
for (const guide of guides) {
  const topic = guide.data.topic;
  if (!grouped.has(topic)) grouped.set(topic, []);
  grouped.get(topic)!.push(guide);
}
---

<BaseLayout
  title={`Guides — ${t("site.title", locale)}`}
  description="Guides approfondis sur le droit fiscal belge — TOB, droits de succession, fiscalité des sociétés et plus encore."
  locale={locale}
  path="/guides/"
>
  <main id="main-content">
    <Section class="py-24 md:py-32">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-display text-foreground">Guides fiscaux</h1>
        <p class="mt-4 text-body-lg text-muted-foreground">Guides de référence approfondis sur les sujets fiscaux belges</p>
      </div>
    </Section>

    {guides.length > 0 ? (
      [...grouped.entries()].map(([topic, topicGuides]) => (
        <Section>
          <h2 class="text-h2 text-foreground">{topic}</h2>
          <div class="mt-6 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {topicGuides.map((guide) => (
              <Card>
                <a href={`/${locale}/guides/${guide.id.replace(/\.mdx?$|\.md$/, "")}/`} class="block group">
                  <h3 class="text-body-lg font-semibold text-foreground group-hover:text-primary-text transition-colors">
                    {guide.data.title}
                  </h3>
                  <p class="mt-2 text-body-sm text-muted-foreground">{guide.data.description}</p>
                  <p class="mt-3 text-caption text-muted-foreground">
                    Mis à jour le {guide.data.lastUpdated.toLocaleDateString("fr-BE", { year: "numeric", month: "long", day: "numeric" })}
                  </p>
                </a>
              </Card>
            ))}
          </div>
        </Section>
      ))
    ) : (
      <Section>
        <p class="text-center text-body text-muted-foreground">Les guides arrivent bientôt. Revenez après le lancement !</p>
      </Section>
    )}
  </main>
</BaseLayout>
