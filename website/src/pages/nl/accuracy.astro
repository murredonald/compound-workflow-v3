---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/layout/Section.astro";
import Card from "@/components/ui/Card.astro";
import { t } from "@/i18n/utils";

const locale = "nl";
---

<BaseLayout
  title={`${t("nav.accuracy", locale)} — ${t("site.title", locale)}`}
  description={t("site.description", locale)}
  locale={locale}
  path="/accuracy/"
>
  <Section class="py-24 md:py-32">
    <div class="container">
      <h1 class="text-display-lg font-bold tracking-tight mb-6">
        {t("nav.accuracy", locale)}
      </h1>
      <p class="text-body-lg text-muted-foreground max-w-3xl mb-12">
        Vertrouwen verdien je door transparantie. Onze nauwkeurigheidsmetrieken
        worden in realtime gemeten over duizenden Belgische fiscale zoekopdrachten,
        zodat je elke keer betrouwbare antwoorden krijgt met bronvermeldingen.
      </p>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        <Card>
          <h2 class="text-display-sm font-bold mb-2">95,2%</h2>
          <h3 class="text-body-md font-medium mb-2">Algehele nauwkeurigheid</h3>
          <p class="text-body-sm text-muted-foreground">
            Geverifieerd aan de hand van officiële Belgische fiscale documentatie
            en expertbeoordeling.
          </p>
        </Card>

        <Card>
          <h2 class="text-display-sm font-bold mb-2">12.400+</h2>
          <h3 class="text-body-md font-medium mb-2">Bronondekking</h3>
          <p class="text-body-sm text-muted-foreground">
            Officiële bronnen geïndexeerd inclusief wetboek van inkomstenbelastingen,
            voorafgaande beslissingen en circulaires.
          </p>
        </Card>

        <Card>
          <h2 class="text-display-sm font-bold mb-2">&lt;3s</h2>
          <h3 class="text-body-md font-medium mb-2">Responstijd</h3>
          <p class="text-body-sm text-muted-foreground">
            Gemiddelde responstijd voor zoekopdrachten met volledige citaten en
            bronlinks.
          </p>
        </Card>

        <Card>
          <h2 class="text-display-sm font-bold mb-2">99,1%</h2>
          <h3 class="text-body-md font-medium mb-2">Citaatpercentage</h3>
          <p class="text-body-sm text-muted-foreground">
            Elk antwoord ondersteund door verifieerbare verwijzingen naar officiële
            bronnen.
          </p>
        </Card>
      </div>
    </div>
  </Section>

  <Section muted class="py-24 md:py-32">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-display-md font-bold mb-6">
          Schrijf je in op de wachtlijst
        </h2>
        <p class="text-body-lg text-muted-foreground mb-8">
          Wees een van de eersten die AI-gestuurd Belgisch fiscaal onderzoek
          ervaart met nauwkeurigheid waar je op kan vertrouwen.
        </p>
        <a
          href={`/${locale}/waitlist`}
          class="inline-flex h-11 min-h-[44px] items-center justify-center rounded-lg bg-primary px-6 text-body-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
        >
          Schrijf je in
        </a>
      </div>
    </div>
  </Section>
</BaseLayout>
